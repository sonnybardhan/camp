<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="url" value="<%= campground.img %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" value="<%=campground.price%>" min="0.00" step="0.10">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="description" placeholder="Description ..."><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-lg btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/">Back</a> | <a href="/campgrounds">Campgrounds</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>