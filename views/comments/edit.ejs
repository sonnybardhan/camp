<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit comment</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="no-resize form-control" name="text"><%= comment.text %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-lg btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/">Home</a> | <a href="/campgrounds">Campgrounds</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>