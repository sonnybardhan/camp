<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a new comment to <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control no-resize" name="text" placeholder="add a comment ..."></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-lg btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/">Back</a> | <a href="/campgrounds">Campgrounds</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>

